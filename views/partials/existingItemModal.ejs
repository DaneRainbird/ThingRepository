<div class="modal fade" id="item<%= data._id %>Modal" tabindex="-1" aria-labelledby="existingItemModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="item<%= data._id %>Modal"><strong><%= data.name %></strong></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
            </div>
            <div class="modal-body">
                <% if (data.imageUrl != "") { %>
                    <a href=<%=data.imageUrl %>><img class="center-image" height="50%" width="75%" src=<%= data.imageUrl %>></a>
                <% } else { %>
                    <img class="center-image" height="50%" width="75%" src="default_thing.png">
                <% } %>
                <hr />
                <p class="h5"><strong>Name</strong></p>
                <%= data.name %><hr />
                <p class="h5"><strong>Description</strong></p>
                <%= data.description %><hr />
                <p class="h5"><strong>Price</strong></p>
                <%= data.price %>
                <hr />
                <p class="h5"><strong>Date Purchased</strong></p>
                <%= data.date.toDateString() %>
                <br />
                <br />
            </div>
            <div class="modal-footer">
                <button type="button" data-toggle="collapse" data-target="#delete-menu, #delete-start" id="delete-start" class="btn btn-danger collapse show">Delete?</button>
                <div class="collapse" id="delete-menu">
                    <button type="button" class="btn btn-secondary" data-toggle="collapse" data-target="#delete-menu, #delete-start">Go back</button>
                    <button type="button" class="btn btn-danger" value="<%= data._id %>" id="delete-button">Actually Delete</button>
                </div>
            </div>
        </div>
    </div>
</div>
